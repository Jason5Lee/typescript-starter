{
    "name": "playground",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "init": "yarn add \"@types/eslint\" \"@types/jest\" \"@types/node\" \"@typescript-eslint/eslint-plugin\" \"@typescript-eslint/parser\" \"concurrently\" \"eslint\" \"jest\" \"nodemon\" \"ts-jest\" \"typescript\" --dev",
        "build": "yarn run build-ts && yarn run lint",
        "build-ts": "tsc",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "start": "node dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
        "watch-node": "nodemon dist/app.js",
        "watch-test": "yarn run test -- --watchAll",
        "test": "jest --forceExit --coverage --verbose",
        "watch-ts": "tsc -w"
    },
    "keywords": [],
    "author": "Jason Dongheng Lee",
    "license": "ISC",
    "main": "dist/app.js"
}
