{
    "name": "playground",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "build": "yarn run build-ts && yarn run lint",
        "build-ts": "tsc",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "start": "node dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
        "watch-node": "nodemon dist/app.js",
        "watch-test": "yarn run test -- --watchAll",
        "test": "jest --forceExit --coverage --verbose",
        "watch-ts": "tsc -w"
    },
    "keywords": [],
    "author": "Jason Dongheng Lee",
    "license": "ISC",
    "main": "dist/app.js",
    "devDependencies": {
        "@types/eslint": "^8.4.5",
        "@types/jest": "^28.1.6",
        "@types/node": "^18.6.5",
        "@typescript-eslint/eslint-plugin": "^5.33.0",
        "@typescript-eslint/parser": "^5.33.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.30.0",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.4"
    }
}
