{
    "name": "playground",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "build": "pnpm run build-ts && pnpm run lint",
        "build-ts": "tsc",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "start": "node dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"pnpm run watch-ts\" \"pnpm run watch-node\"",
        "watch-node": "nodemon dist/app.js",
        "watch-test": "pnpm run test -- --watchAll",
        "test": "jest --forceExit --coverage --verbose",
        "watch-ts": "tsc -w"
    },
    "keywords": [],
    "author": "Jason Dongheng Lee",
    "license": "ISC",
    "type": "module",
    "exports": "./dist/app.js",
    "engines": {
        "node": ">=14.16"
    },
    "devDependencies": {
        "@types/eslint": "^8.21.1",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.14.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.34.0",
        "jest": "^29.4.3",
        "nodemon": "^2.0.20",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    }
}
